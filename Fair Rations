string fairRations(vector<int> B) {
int loaves = 0;
    int n = B.size();

    for (int i = 0; i < n - 1; ++i) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            loaves += 2;
        }
    }

    // Final check: if last person has odd loaves, it's impossible
    if (B[n - 1] % 2 != 0)
        return "NO";
    else
        return to_string(loaves);
}
